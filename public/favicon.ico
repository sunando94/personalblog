        .logo-text { fill: #ffffff; }
        .slash { stroke: #ffffff; }
      }
    </style>
  </defs>
  
  <g transform="translate(150, 140)">
    <text x="-50" y="-10" class="logo-text" text-anchor="middle">S</text>
    <line x1="-40" y1="70" x2="50" y2="-80" class="slash" />
    <text x="35" y="100" class="logo-text" text-anchor="middle">B</text>
  </g>
</svg>
